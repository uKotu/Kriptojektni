<Window x:Class="Kriptojektni.ShareFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kriptojektni"
        mc:Ignorable="d"
        Title="ShareFileWindow" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Name="userComboBox" HorizontalAlignment="Center" Margin="0,53,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="120"/>
        <Label Content="Pick user" HorizontalAlignment="Center" Margin="0,22,0,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
        <Button Name="SelectUserButton" Content="Select user" HorizontalAlignment="Center" Margin="0,130,0,0" Grid.RowSpan="2" Width ="80" VerticalAlignment="Top" Click="SelectUserButton_Click"/>

    </Grid>
</Window>
